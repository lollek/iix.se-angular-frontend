<h1 id="books">Books</h1>
<table class="table table-hover">
  <thead>
    <tr class="header">
      <th>Title</th>
      <th>Author</th>
      <th>Other</th>

      <% if @modify %>
      <th>Modify</th>
      <% end %>

    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.other %></td>

      <% if @modify %>
      <td>
        <%= link_to 'E', edit_book_path(book) %>
        <%= link_to 'D', book_path(book),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
      </td>
      <% end %>

    </tr>
    <% end %>
  </tbody>
</table>
